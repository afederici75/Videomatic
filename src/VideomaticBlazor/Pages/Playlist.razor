@page "/Playlist/{PlaylistId:long}"
@inject ISender Sender;

<CardDeck>
@foreach (var video in Videos)
{
    <VideoCard Video=video  GridMode=true/>
}   
</CardDeck>

@code {
    VideoDTO[] Videos = Array.Empty<VideoDTO>();    

    [Parameter]
    public long PlaylistId { get; set; } = 0;
    List<string> EventType = new List<string>();

    protected override async Task OnParametersSetAsync()
    {
        var filter = new VideosFilter(PlaylistId: PlaylistId);
        var query = new GetVideosQuery(
            Filter: filter,
            IncludeCounts: true, 
            IncludeThumbnail: ThumbnailResolution.Default);

        var results = await Sender.Send(query);

        Videos = results.Items.ToArray();
    }    
}