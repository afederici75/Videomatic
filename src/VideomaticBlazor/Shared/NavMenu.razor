<Bar Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     Background="Background.Dark"
     ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small">

    <BarToggler Mode="BarTogglerMode.Normal" />

    <BarMenu id="barMenu">
        <!-- BAR START -->
        <BarStart>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Home" />
                    Home
                </BarLink>
            </BarItem>

            <BarItem id="barItem1">
                <BarDropdown id="barDropdown1" Class="XXX" >
                    <BarDropdownToggle id="barDropToggle1" >
                        <BarIcon IconName="IconName.Video" />
                        My Videos
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem>All</BarDropdownItem>
                        <BarDropdownItem>Most Recent</BarDropdownItem>
                        <BarDropdownDivider />
                        <BarDropdownItem To=@nameof(MyVideos) TextColor="TextColor.Light">Philosophy</BarDropdownItem>
                        <BarDropdownDivider />
                        <BarDropdownItem TextColor="TextColor.Light">Artificial Intelligence</BarDropdownItem>
                        <BarDropdownItem TextColor="TextColor.Light">Burning Man</BarDropdownItem>
                        <BarDropdownItem TextColor="TextColor.Light">Gardening</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>

        <!-- BAR END -->
        <BarEnd>
            <BarItem>
                <BarLink To=@nameof(Settings)>
                    <BarIcon IconName="IconName.Gavel" />
                    Settings
                </BarLink>
            </BarItem>

            <BarItem>
                <BarLink To=@nameof(Settings)>
                    <BarIcon />
                    Settings <i class="bi bi-box-arrow-right"></i>
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

