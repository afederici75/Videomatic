        <RadzenText Text="Videomatic: Your Video Analysis Companion" TextStyle="Radzen.Blazor.TextStyle.DisplayH3" TagName="Radzen.Blazor.TagName.Auto"></RadzenText>
        
        <RadzenStack AlignItems="AlignItems.Center" Class="rz-mx-auto rz-my-12">
